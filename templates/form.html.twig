{% extends 'base.html.twig' %}

{% block title %}Shorten URL{% endblock %}

{% block body %}
<div class="row justify-content-md-center">
    <div class="col-md-6">
        <h2 class="mb-3 text-center">Shorten Your URL</h2>
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_label(form.originalUrl, 'URL to Shorten', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.originalUrl, {'attr': {'class': 'form-control', 'placeholder': 'Enter URL here'}}) }}
            {{ form_errors(form.originalUrl) }}
        </div>
        <div class="text-center">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="url-list mt-4" style="display: flex; flex-wrap: wrap; justify-content: flex-start; gap: 10px;">
        <div style="width: 100%; display: flex; margin-top: 100px; justify-content: center;">
            {% for url in urls %}
                {% include 'components/url_item.html.twig' with {'url': url} %}
                {% if loop.index is divisible by(3) %}
                    </div><div style="width: 100%; display: flex; justify-content: center;">
                {% endif %}
            {% endfor %}
        </div>
    </div>

</div>
{% endblock %}
